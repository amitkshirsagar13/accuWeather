<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>accuWeatherProcessor</groupId>
	<artifactId>accuWeatherProcessor</artifactId>
	<version>0.0.2-SNAPSHOT</version>
	<name>accuWeatherProcessor</name>
	<packaging>jar</packaging>
	<description>Accuweather Processor for preprocessing weather information for Conky.</description>
	<url>http://poomit-Aspire-7741:8080/artifactory/webapp/browserepo.html?14&amp;pathId=poomit-dependent:GNCode/FootNoteProcessor/${project.version}/FootNoteProcessor-${project.version}.jar</url>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<releaseEmail.from.name>Rattandeep Chauhan</releaseEmail.from.name>
		<releaseEmail.from.email>rattandeep.chauhan@poomit.com</releaseEmail.from.email>
		<releaseEmail.to.email1>amita.waikar@poomit.com</releaseEmail.to.email1>
		<releaseEmail.to.email2>prateek.jain@poomit.com</releaseEmail.to.email2>
		<releaseEmail.to.email2>rattandeep.chauhan@poomit.com</releaseEmail.to.email2>
	</properties>
	<issueManagement>
		<system>JIRA</system>
		<url>http://jira.codehaus.org/BrowseProject.jspa?id=10450</url>
	</issueManagement>
	<dependencies>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>LATEST</version>
		</dependency>
	</dependencies>
	<developers>
		<developer>
			<id>AccuWeather</id>
			<name>Amit Kshirsagar</name>
			<email>amit.kshirsagar.13@gmail.com</email>
			<organization>openSource</organization>
			<roles>
				<role>Team Lead</role>
			</roles>
		</developer>
	</developers>
	<build>
		<resources>
			<resource>
				<directory>src</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<sourceDirectory>src</sourceDirectory>
		<testResources>
			<testResource>
				<filtering>true</filtering>
				<directory>JavaSource-test/</directory>
				<includes>
					<include>**/*Test.java</include>
				</includes>
			</testResource>
		</testResources>
		<testSourceDirectory>JavaSource-test</testSourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>sonar-maven-plugin</artifactId>
				<version>2.2</version>
				<configuration>
					<sonarHostURL>http://poomit-Aspire-7741:9876/</sonarHostURL>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<webXml>WebContent\WEB-INF\web.xml</webXml>
					<dependentWarIncludes>WebContent, WebContent/images</dependentWarIncludes>
					<webResources>
						<resource>
							<!-- this is relative to the pom.xml directory -->
							<directory>WebContent</directory>
						</resource>
					</webResources>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-changes-plugin</artifactId>
				<version>2.9</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>announcement-mail</goal>
						</goals>
						<id>announcement-mail</id>
					</execution>
				</executions>
				<configuration>
					<smtpHost>mailhost</smtpHost>
					<smtpPort implementation="java.lang.Integer">25</smtpPort>
					<mailSender>
						<name>${releaseEmail.from.name}</name>
						<email>${releaseEmail.from.email}</email>
					</mailSender>
					<toAddresses>
						<toAddress implementation="java.lang.String">${releaseEmail.to.email1}</toAddress>
						<toAddress implementation="java.lang.String">${releaseEmail.to.email2}</toAddress>
					</toAddresses>
					<issueLinkTemplatePerSystem>
						<livelink>http://incident/viewIncident.do?incTktNum=%ISSUE%</livelink>
					</issueLinkTemplatePerSystem>
					<issueManagementSystems>
						<issueManagementSystem>changes.xml</issueManagementSystem>
					</issueManagementSystems>
					<developmentTeam>accuWeatherProcessor Team</developmentTeam>
					<urlDownload>http://poomit-Aspire-7741:8080/artifactory/simple/poomit-dependent</urlDownload>
					<introduction> This is a notification email that the
						${project.version} build of ${project.name} has been code reviewed
						and deployed to Repository. Change list can be viewed on
						${project.url}/changes-report.html</introduction>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.jfrog.buildinfo</groupId>
				<artifactId>artifactory-maven-plugin</artifactId>
				<version>2.2.1</version>
				<inherited>false</inherited>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>publish</goal>
						</goals>
						<id>build-info</id>
						<configuration>
							<deployProperties>
								<gradle>awesome</gradle>
								<review.team>qa</review.team>
							</deployProperties>
							<publisher>
								<contextUrl>http://poomit-Aspire-7741:8080/artifactory</contextUrl>
								<username>admin</username>
								<password>password</password>
								<repoKey>poomit-dependent</repoKey>
								<snapshotRepoKey>poomit-dependent</snapshotRepoKey>
							</publisher>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<mainClass>fully.qualified.MainClass</mainClass>
						</manifest>
					</archive>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.11</version>
				<configuration>
					<groups>accuWeatherProcessorTest</groups>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>sonar</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<!-- Example for MySQL -->
				<sonar.jdbc.url>jdbc:h2:tcp://poomit-Aspire-7741:9092/sonar</sonar.jdbc.url>
				<sonar.jdbc.username>sonar</sonar.jdbc.username>
				<sonar.jdbc.password>sonar</sonar.jdbc.password>
				<sonar.jdbc.driver>org.h2.Driver</sonar.jdbc.driver>
				<!-- Optional URL to server. Default value is http://localhost:9000 -->
				<sonar.host.url>
					http://poomit-Aspire-7741:9876
				</sonar.host.url>
			</properties>
		</profile>
	</profiles>
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-changes-plugin</artifactId>
				<version>2.9</version>
				<reportSets>
					<reportSet>
						<reports>
							<report>jira-report</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
		</plugins>
	</reporting>
	<distributionManagement>
		<repository>
			<id>poomit-Aspire-7741</id>
			<name>poomit-Aspire-7741-releases</name>
			<url>http://poomit-Aspire-7741:8080/artifactory/poomit-dependent</url>
		</repository>
		<snapshotRepository>
			<id>poomit-Aspire-7741</id>
			<name>poomit-Aspire-7741-snapshots</name>
			<url>http://poomit-Aspire-7741:8080/artifactory/poomit-dependent</url>
		</snapshotRepository>
	</distributionManagement>
	<dependencyManagement>
		<dependencies>
		</dependencies>
	</dependencyManagement>
	<repositories>
		<repository>
			<id>central</id>
			<url>http://poomit-Aspire-7741:8080/artifactory/poomit-dependent</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>snapshots</id>
			<url>http://poomit-Aspire-7741:8080/artifactory/poomit-dependent</url>
			<releases>
				<enabled>false</enabled>
				<updatePolicy>always</updatePolicy>
				<checksumPolicy>warn</checksumPolicy>
			</releases>
		</repository>
	</repositories>
</project>